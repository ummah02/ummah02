@bot.message_handler(commands=['БРОНИРОВАНИЕ-2️⃣','STANDART_TWIN'])
def user(message):
    анкета=bot.send_message(message.from_user.id, "<i><b>БРОНИРОВАНO:\n<ins>STANDART TWIN\ДВУХМЕСТНЫЙ СТАНДАРТ!</ins>\n\n""*ОТПРАВЬТЕ НАМ ВАШ Ф.И.О.!\n*СЕРИЯ ПАСПОРТА!\n*ТЕЛЕФОН НОМЕР!\n*И НА КАКИЕ ДАТЫ?\n\n*К ПРИМЕРУ:</b></i>\n<ins><i>-АБДУЛЛАЕВ НОДИР ОДИЛОВИЧ\n-AB240802\n-(90)1112233\n-ОТ 1 СЕНТЯБРЯ, ДО 2го СЕНТЯБРЯ</i></ins>",parse_mode="html")
    bot.register_next_step_handler(анкета, save)
    bot.forward_message(TO_CHAT_ID, message.from_user.id, message.id)
def save(message):
    примечание = bot.send_message(message.from_user.id, "<b>МОЖЕТЕ ОТПРАВИТЬ НАМ\nДОПОЛЬНИТЕЛЬНУЮ ИНФОРМАЦИЮ!</b>\n\nК ПРИМЕРУ:\n\n<i>-Соединить кровать\n-Включите кондитционер до нашего прихода</i>",parse_mode="html")
    bot.register_next_step_handler(примечание, search2)
    bot.forward_message(TO_CHAT_ID, message.from_user.id, message.id)
def search2(message):
    bot.send_message(message.from_user.id, "<b>Выберите ПЛАТФОРМУ для реализации оплаты!</b>\n\n"
                                            "*****<ins><b>/CLICK_2 или /PAYME_2</b></ins>*****",parse_mode="html")
    markup = types.ReplyKeyboardMarkup(row_width=1)
    btn1 = types.KeyboardButton("/CLICK_2")
    btn2 = types.KeyboardButton("/PAYME_2")
    markup.add(btn1,btn2,)
    bot.send_message(message.chat.id, text="<b>НАЖМИТЕ НА КНОПКУ!</b>",reply_markup=markup, parse_mode="html")
