                                                "<b>ТРЕХМЕСТНЫЙ СТАНДАРТ-</b>/TRIPLE_STANDART\n"
                                                "<b>СЕМЕЙНЫЙ ЛЮКС-</b>/FAMILY_SUITE_ROOM\n"
                                                "<b>ЛЮКС С БАЛКОНОМ-</b>/SUITE_WITH_BALCONY"
                                                ,parse_mode="html")
    else:
        bot.send_message(message.chat_id, 'Простите, я вас не понял :(')

bot.infinity_polling(skip_pending = True)
bot.polling(none_stop=True)
