@bot.message_handler(content_types=["text"])
def start(message):
    if (message.text == '/start'or message.text == "Главное меню⏪" ):  
        markup = types.ReplyKeyboardMarkup(row_width=1)
        btn1 = types.KeyboardButton("🔑 НОМЕРА")
        btn2 = types.KeyboardButton("УСЛУГИ")
        btn3 = types.KeyboardButton("УСЛОВИЯ ПРОЖИВАНИЯ")
        btn4 = types.KeyboardButton("🗺 ЛОКАЦИЯ")
        btn5 = types.KeyboardButton("🏨 ЧТО НАХОДИТСЯ РЯДОМ")
        btn6 = types.KeyboardButton("🏞 ГАЛАРЕЯ!")
        btn7 = types.KeyboardButton("☎️ КОНТАКТЫ")
        btn8 = types.KeyboardButton("БЫСТРАЯ БРОНЬ")
        markup.add(btn1,btn2,btn3,btn4,btn5,btn6,btn7,btn8)
        bot.send_message(message.chat.id, text="<b>Добро пожаловать!</b>\n*****<ins><b>{0.first_name}!</b></ins>***** ""\n\n<i>На официальный бот нашего отеля\n</i><b>HOTEL DIAMOND TASHKENT !</b>\n\n<i>ЧТО ИНТЕРЕСУЕТ ВАС?</i>\n\n<b>*БРОНИРОВАНИЕ НОМЕРОВ✅\n*УСЛУГИℹ️\n*УСЛОВИЯ ПРОЖИВАНИЯ❕\n*ЛОКАЦИЯ🚩\n*ЧТО НАХОДИТСЯ РЯДОМ!🏨\n*КОНТАКТЫ☎️</b>".format(message.from_user),reply_markup=markup, parse_mode="html") 
       
    if (message.text == "🔑 НОМЕРА" or message.text == "НАЗАД!↩️"):
        bot.send_message(message.chat.id, text="<b>ВЫБЕРИТЕ НОМЕР!</b>\n\n1️⃣-<b>SINGLE ROOM</b>\nОДНОМЕСТНЫЙ!\n\n2️⃣-<b>STANDART TWIN</b>\nДВУХМЕСТНЫЙ СТАНДАРТ!\n\n3️⃣-<b>DELUXE TWIN</b>\nДВУХМЕСТНЫЙ ПОЛУ ЛЮКС!\n\n4️⃣-<b>TRIPLE STANDART</b>\nТРЕХМЕСТНЫЙ СТАНДАРТ!\n\n5️⃣-<b>FAMILY SUITE ROOM</b>\nСЕМЕЙНЫЙ ЛЮКС НОМЕР\n\n6️⃣-<b>SUITE WITH BALCONY\n</b>ЛЮКС С БАЛКОНОМ\n\n7️⃣-<b>CONFERENCE HALL\n</b>ЗАЛ ДЛЯ КОНФЕРЕНЦИИ",parse_mode="html")
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1 = types.KeyboardButton("1️⃣")
        btn2 = types.KeyboardButton("2️⃣")
        btn3 = types.KeyboardButton("3️⃣")
        btn4 = types.KeyboardButton("4️⃣")
        btn5 = types.KeyboardButton("5️⃣")
        btn6 = types.KeyboardButton("6️⃣")
        btn7 = types.KeyboardButton("7️⃣")
        back = types.KeyboardButton("Главное меню⏪")
        markup.add(btn1, btn2,btn3,btn4,btn5,btn6,btn7,back)
        bot.send_message(message.chat.id, text="<b>НАЖМИТЕ НА КНОПКУ!</b>", reply_markup=markup,parse_mode="html")
  
    elif (message.text == "🗺 ЛОКАЦИЯ"):
        markup = types.InlineKeyboardMarkup(row_width=1)
        button1 = types.InlineKeyboardButton("🗺 google.maps!", url="https://goo.gl/maps/QfNy9vRTgutX2n6F9")  
        button2 = types.InlineKeyboardButton("🗺 yandex.maps!", url="https://yandex.uz/maps/-/CCUVQFfCCA")
        markup.add(button1,button2)
        bot.send_message(message.chat.id, "<i><b>УВАЖАЕМЫЙ(ая)-***{0.first_name}***\n\nGOOGLE MAPS ДЛЯ ANDROID!\n\nYANDEX MAPS ДЛЯ IOS!\n</b></i>".format(message.from_user), reply_markup=markup,parse_mode="html") 
    elif (message.text == "🏨 ЧТО НАХОДИТСЯ РЯДОМ"):
        bot.send_message(message.chat.id, text="<b>🏨 ЧТО НАХОДИТСЯ РЯДОМ\n\n"
                                                                "✈️АЭРОПОРТ им.ИСЛАМА КАРИМОВА-4 километр\n\n"
                                                                "☕️КАФЕ-500 метр\n\n"
                                                                "🚇МЕТРО МИРЗО УЛУГБЕК-1 километр\n\n"
                                                                "🧺СУПЕР МАРКЕТ-500 метр\n\n"
                                                                "🕌МЕЧЕТЬ-500 метр\n\n"
                                                                "🎡ПАРК им.ГАФУРА ГУЛЯМА-500 метр\n\n"
                                                                "🏟СТАДИОН:БУНЮДКОР-500 метр\n\n"
                                                                "🚞ВОКЗАЛ ЮЖНЫЙ-3 километр\n\n"
                                                                "🚌АВТОВОКЗАЛ-4 километр\n\n</b>",parse_mode="html")                                                                              
    elif (message.text == "☎️ КОНТАКТЫ"):
        bot.send_message(message.chat.id, text="<b>📝 КОНТАКТЫ ГОСТИНИЦЫ</b>\n\n"
                                                                "<b>📞НОМЕР ГОСТИНИЦЫ</b>\n+998712770707\n\n"
                                                                "<b>📬СВЯЗЬ С RECEPTION</b>\n@hotel_diamond_reception\n\n"
                                                                "<b>📬ПОЧТА ГОСТИНИЦЫ</b>\ndiamond.tashkent.hotel@mail.ru\n\n"
                                                                "<b>🔵ТЕЛЕГРАМ КАНАЛ ГОСТИНИЦЫ</b>\nhttps://t.me/diamond_tashkent_hotel",parse_mode="html")
