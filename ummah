from email import message
import telebot
from telebot import types 
from telebot.types import LabeledPrice


bot = telebot.TeleBot("")
TO_CHAT_ID = "" 
provider_token_click = ''
provider_token_payme = ''

prices1 = [LabeledPrice(label='ОДНОМЕСТНЫЙ НОМЕР!', amount=110000)]
prices_1 = [LabeledPrice(label='ОДНОМЕСТНЫЙ НОМЕР!', amount=110000)]
prices2 = [LabeledPrice(label='ДВУХМЕСТНЫЙ СТАНДАРТ!', amount=36000000)]
prices3 = [LabeledPrice(label='ДВУХМЕСТНЫЙ ПОЛУ ЛЮКС!', amount=39000000)]
prices4 = [LabeledPrice(label='ТРЕХМЕСТНЫЙ СТАНДАРТ!', amount=51500000)]
prices5 = [LabeledPrice(label='СЕМЕЙНЫЙ ЛЮКС НОМЕР!', amount=57000000)]
prices6 = [LabeledPrice(label='ЛЮКС С БАЛКОНОМ!', amount=57000000)]

@bot.message_handler(commands=['БРОНИРОВАНИЕ-1️⃣','SINGLE_ROOM']  )
def user_1(m, res=False):
    анкета=bot.send_message(m.chat.id, "<i><b>БРОНИРОВАНO:\n<ins>SINGLE ROOM\ОДНОМЕСТНЫЙ НОМЕР!</ins>\n\n""*ОТПРАВЬТЕ НАМ ВАШ Ф.И.О.!\n*СЕРИЯ ПАСПОРТА!\n*ТЕЛЕФОН НОМЕР!\n*И НА КАКИЕ ДАТЫ?\n\n*К ПРИМЕРУ:</b></i>\n<ins><i>-АБДУЛЛАЕВ НОДИР ОДИЛОВИЧ\n-AB240802\n-(90)1112233\n-ОТ 1 СЕНТЯБРЯ, ДО 2го СЕНТЯБРЯ</i></ins>",parse_mode="html")
    bot.register_next_step_handler(анкета, save_1)
    bot.forward_message(TO_CHAT_ID, m.chat.id, message.id)
def save_1(message, res=False):
    примечание = bot.send_message(message.from_user.id, "<b>МОЖЕТЕ ОТПРАВИТЬ НАМ\nДОПОЛЬНИТЕЛЬНУЮ ИНФОРМАЦИЮ!</b>\n\nК ПРИМЕРУ:\n\n<i>-Соединить кровать\n-Включите кондитционер до нашего прихода</i>",parse_mode="html")
    bot.register_next_step_handler(примечание, search_1)
    bot.forward_message(TO_CHAT_ID, message.from_user.id, message.id)
def search_1(message, res=False):
    bot.send_message(message.from_user.id, "<b>Выберите ПЛАТФОРМУ для реализации оплаты!</b>\n\n"
                                            "*****<ins><b>/CLICK_1 или /PAYME_1</b></ins>*****",parse_mode="html")
    markup = types.ReplyKeyboardMarkup(row_width=1)
    btn1 = types.KeyboardButton("/CLICK_1")
    btn2 = types.KeyboardButton("/PAYME_1")
    markup.add(btn1,btn2,)
    bot.send_message(message.chat.id, text="<b>НАЖМИТЕ НА КНОПКУ!</b>",reply_markup=markup, parse_mode="html")
    bot.forward_message(TO_CHAT_ID, message.from_user.id, message.id)

#----------------------------------------------------------------------------------------------------------------------

@bot.message_handler(commands=['CLICK_1'])  
def платеж_1(message, res=False):
    bot.send_message(message.chat.id,
                     "Вы выбрали платформу *CLICK*✅" , parse_mode = 'Markdown' )
    bot.send_invoice(message.chat.id,  #chat_id
                     'БРОНИРОВАНИЕ НОМЕРА!', #title
                     'СРОК ИСТЕКАНИЕ-00:00', #description
                     '!_!', #invoice_payload
                     provider_token_click, #provider_token
                     'UZS', #currency
                     prices1, #prices
                     photo_url=("https://hitfm.ru/rx/750x750,c_1,g_CenterCenter/uploads/6a/97/d59d8f14d7a3f0d59d805f03354b.jpg"),
                     photo_height=512,
                     photo_width=512,
                     photo_size=512,
                     is_flexible=False,
                     start_parameter='hotel')
    markup = types.ReplyKeyboardMarkup(row_width=1)
    btn1 = types.KeyboardButton("Главное меню⏪")
    markup.add(btn1,)
    bot.send_message(message.chat.id, text="<i><b>НАЖМИТЕ НА КНОПКУ ЗАПЛАТИТЬ!</b></i>",reply_markup=markup, parse_mode="html")
    bot.forward_message(TO_CHAT_ID, message.from_user.id, message.id)  
@bot.pre_checkout_query_handler(func=lambda query: True)
def checkout(pre_checkout_query):
    bot.answer_pre_checkout_query(pre_checkout_query.id, ok=True,
                                  error_message="Просим прошение! ПРОИЗОШЛО МАЛЕНЬНОЕ ОШИБКА! Попробуйте заплатить еще раз через несколько минут ")
@bot.message_handler(content_types=['successful_payment'])
def got_payment(message):
    bot.send_message(message.chat.id,'ПЛАТЕЖ УСПЕШНО ПРОВЕДЁН В РАЗМЕРЕ! ***{} {}*** ЖДЕМ ВАС В ГОСТИ!'.format(message.successful_payment.total_amount / 100, message.successful_payment.currency),parse_mode='Markdown')

#----------------------------------------------------------------------------------------------------------------------

